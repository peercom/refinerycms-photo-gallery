<% if @page.album.present? %>

    <% cache "refinery/photo_gallery/albums/#{@page.album.id}" do %>
        <h2 id="gallery_title">
          <%= @page.album.title %>
        </h2>

        <div id="gallery_desc">
          <%= raw @page.album.description %>
        </div>
    <% end %>

    <div id="photo_gallery">
      <%= render :partial => "/refinery/photo_gallery/albums/photos" %>
    </div>

<% end %>

